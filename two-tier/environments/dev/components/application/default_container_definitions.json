[
    {
        "name": "api_gateway_container",
        "image": "nginx:latest",
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "ap-northeast-1",
                "awslogs-stream-prefix": "ecs-api",
                "awslogs-group": "/ecs/api"
            }
        },
        "secrets": [
            {
                "name": "DB_ENDPOINT",
                "valueFrom": "/db/endpoint"
            },
            {
                "name": "DB_USERNAME",
                "valueFrom": "/db/username"
            },
            {
                "name": "DB_PASSWORD",
                "valueFrom": "/db/password"
            },
            {
                "name": "ELASTICACHE_ENDPOINT",
                "valueFrom": "/elasticache/endpoint"
            }
        ],
        "portMappings": [
            {
                "protocol": "tcp",
                "containerPort": 80
            },
            {
                "protocol": "tcp",
                "containerPort": 9000
            }
        ]
    }
]